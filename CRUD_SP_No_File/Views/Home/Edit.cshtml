
@{
    Layout = null;
}
@using CRUD_SP_No_File.Models
@model EmployeeMaster
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <form action="/Home/Edit" method="post">
                    <div class="row">
                        <h2 class="text-center">Employee Updation Form</h2>
                        <div class="col-sm-6">
                            <input type="hidden" name="RId" value="@Model.RId" />
                            <label class="form-label">Name</label>
                            <input type="text" name="Name" value="@Model.Name" class="form-control" />
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label">Email Id</label>
                            <input type="email" name="EmailId" value="@Model.EmailId" class="form-control" />
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label">Contact No</label>
                            <input type="number" name="ContactNo" value="@Model.ContactNo" class="form-control" />
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label">State</label>
                            <select name="State" class="form-control" value="@Model.State">
                                <option>UP</option>
                                <option>MP</option>
                                <option>HP</option>
                                <option>Bihar</option>
                            </select>
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label">City</label>
                            <select name="City" class="form-control" value="@Model.City">
                                <option>Varansi</option>
                                <option>Lucknow</option>
                                <option>Mirzapur</option>
                                <option>Chitrakoot</option>
                            </select>
                        </div>
                        <div class="col-sm-6">
                            <label class="form-label">Pin Code</label>
                            <input type="number" name="PinCode" value="@Model.PinCode" class="form-control" />
                        </div>
                        <div class="col-sm-12">
                            <label class="form-label">Address</label>
                            <textarea name="Address" class="form-control">@Model.Address</textarea>
                        </div>
                        <div class="col-sm-6 pt-3">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
</body>
</html>
